#include <iostream>

int main() {
  
  double weight;
  int x;

  std::cout << "What is your earth weight? \n";
  std::cin >>  weight;

  std::cout << "\nI have information on the following planets: \n\n";
  std::cout << "  1 = Venus\n";
  std::cout << "  2 = Mars\n";
  std::cout << "  3 = Jupiter\n";
  std::cout << "  4 = Saturn\n";
  std::cout << "  5 = Uranus\n";
  std::cout << "  6 = Neptune\n";

  std::cout << "What planet will you be visiting? "; 
  std::cin >> x;

  if (x==1) {
    weight = weight * 0.78;
  } else if (x==2) {
    weight = weight * 0.39;
  } else if (x==3) {
    weight = weight * 2.65;
  } else if (x==4) {
    weight = weight * 1.17;
  } else if (x==5) {
    weight = weight * 1.05;
  } else if (x==6) {
    weight = weight * 1.23;
  }

  std::cout << "\nYour weight will be: " << weight << "\n";
  
}
